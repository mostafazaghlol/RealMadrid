<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.android.realmadrid.MainActivity">


    <TextView
        android:id="@+id/AboutTeam"
        style="@style/textViews"
        android:layout_margin="10dp"
        android:background="@color/Quiz_cat"
        android:text="@string/Team"

        />
    <TextView
        android:id="@+id/managerTextview"
        style="@style/textViews"
        android:layout_margin="10dp"

        android:background="@color/Manager_cat"
        android:text="@string/Manager" />

    <TextView
        android:id="@+id/playerTextview"
        style="@style/textViews"
        android:layout_margin="10dp"
        android:background="@color/Player_cat"
        android:text="@string/Player"

        />


    <TextView
        android:id="@+id/nextMatchTextview"
        style="@style/textViews"
        android:layout_margin="10dp"
        android:background="@color/nextMatch_cat"
        android:text="@string/nextMatch" />
    <TextView
        android:id="@+id/newsTextview"
        style="@style/textViews"
        android:layout_margin="10dp"
        android:background="@color/Player_cat"
        android:text="@string/news" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/realmadrid"
        android:layout_gravity="center"/>


</LinearLayout>
